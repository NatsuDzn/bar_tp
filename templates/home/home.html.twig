{% extends 'base.html.twig' %}

{% block title %}Bar Ã  Beer{% endblock %}

{% block body %}

<h1>{{ title }}</h1>

{% for beer in beers %}
<div class="card mt-5">
  <div class="card-body">
    <div>
      <h5 class="card-title">Beer:</h5>
      <h5 class="card-title">
        <a href="{{ path('beer', { 'id' : beer.id }) }}">{{ beer.name | capitalize }}</a>
      </h5>
    </div>
    <p class="card-text"><b>Description:</b> {{ beer.description }}</p>
  </div>
</div>
{% endfor %}

{% endblock %}